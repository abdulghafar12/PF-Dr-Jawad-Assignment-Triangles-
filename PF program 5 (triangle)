#include <iostream>
using namespace std;

int main() {
/*   *********
      *******
       *****
        ***
         *
    int n = 5;  // Number of rows
    for (int i = n; i >= 1; i--) {
        // Print spaces first
        for (int j = 1; j <= n - i; j++) {
            cout << " ";
        }
        // Then print stars
        for (int j = 1; j <= 2 * i - 1; j++) {
            cout << "*";
        }
        cout << endl;
    }
    return 0;
}
