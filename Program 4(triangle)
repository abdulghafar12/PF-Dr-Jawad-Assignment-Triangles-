#include <iostream>
using namespace std;

int main() {
    /*    *****
             ****
               ***
                 **
                   *    */
    for (int i = 5; i >= 1; i--) {
        // Print spaces first
        for (int j = 1; j <= 5 - i; j++) {
            cout << "  ";
        }
        // Then print stars
        for (int j = 1; j <= i; j++) {
            cout << "* ";
        }
        cout << endl;
    }
    return 0;
}
